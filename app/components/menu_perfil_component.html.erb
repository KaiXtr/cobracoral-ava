<div id="menu-perfil">
    <%= render PomodoroToolComponent.new(login_time: session[:login_time]) %>
    <h4 class="menu-perfil-usuario-cargo">
        <%= helpers.enum_cargo_usuario(@usuario_autenticado) %>
    </h4>
    <ul>
        <li>
            <a href="/perfil">
                <i class="fa-solid fa-smile fa-xl"></i>
                <span>Editar perfil</span>
            </a>
        </li>
        <li>
            <a href="/usuarios/:id/caixa" target="_blank">
                <i class="fa-solid fa-envelope fa-xl"></i>
                <span>Abrir caixa de entrada</span>
            </a>
        </li>
        <% if @usuario_autenticado.lattes_id %>
            <li>
                <a href="/usuarios/:id/lattes" target="_blank">
                    <i class="fa-solid fa-file-lines fa-xl"></i>
                    <span>Acessar currículo lattes</span>
                </a>
            </li>
        <% end %>
        <li>
            <a onclick="abrirBarraPreferencias()" style="cursor: pointer;">
                <i class="fa-solid fa-gear fa-xl"></i>
                <span>Preferências</span>
            </a>
        </li>
        <li>
            <a href="/sair" data-turbo-prefetch="false">
                <i class="fa-solid fa-door-open fa-xl"></i>
                <span>Sair</span>
            </a>
        </li>
    </ul>
</div>
