<nav>
  <div class="deslizar-transition">
    <p style="color: green"><%= notice %></p>
    <a href="/disciplinas/<%= @disciplina_conteudo.id %>">
      <i class="fa-solid fa-arrow-left fa-sm"></i>
      Voltar para <strong><%= @disciplina_conteudo.nome_disciplina %></strong>
    </a>
    <h1>
      <%= @conteudo.nome_conteudo %>
      <% if policy(@conteudo).edit? %>
        <a href="/conteudos/<%= @conteudo.id %>/editar">
            <i class="fa-solid fa-pen fa-sm icon-button"></i>
        </a>
      <% end %>
    </h1>
    <span class="conteudo-data">
      <%= formatar_data_liberacao(@conteudo.data_liberacao) %>
    </span>
    <span class="conteudo-data">
      <%= formatar_data_vencimento(@conteudo.data_vencimento) %>
    </span>

    <div class="conteudo-elementos">
      <%= @conteudo.corpo %>
    </div>

    <div class="button-group">
      <% if @conteudo.id - 1 > 0 %>
        <a href="/conteudos/<%= @conteudo.id - 1 %>">
          <button class="act-button">Conteúdo anterior</button>
        </a>
      <% end %>
      <a href="/conteudos/<%= @conteudo.id %>/salvar">
        <button class="act-button">
          <% if @proximoConteudo %>
            Próximo conteúdo: <%= @proximoConteudo.nome_conteudo %>
          <% else %>
            Voltar à disciplina
          <% end %>
        </button>
      </a>
    </div>
  </div>
</nav>
