<%= javascript_include_tag 'trix' %>
<%= form_with(model: conteudo) do |form| %>
  <% if conteudo.errors.any? %>
    <div style="color: red">
      <ul>
        <% conteudo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h1>
    <%= form.text_field :nome_conteudo, class: "titulo-pagina page-edit-input" %>
  </h1>

  <div>
    <%= form.rich_text_area :corpo %>
  </div>
  <%= render CancelarSalvarButtonsComponent.new(
    cancel_to_link: '/conteudos/' + @conteudo.id.to_s)
  %>
<% end %>
