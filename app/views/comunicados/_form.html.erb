<%= form_with(model: comunicado) do |form| %>
  <% if comunicado.errors.any? %>
    <div style="color: red">
      <ul>
        <% comunicado.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :turma_id, style: "display: block" %>
    <%= form.text_field :turma_id %>
  </div>

  <div>
    <%= form.label :conteudo, style: "display: block" %>
    <%= form.text_area :conteudo %>
  </div>

  <div>
    <%= form.label :url_img, style: "display: block" %>
    <%= form.text_field :url_img %>
  </div>

  <div class="button-group">
    <a href="/comunicados">
      <button class="act-button">
        Cancelar
      </button>
    </a>
    <button type="submit" class="act-button">
      Publicar
    </button>
  </div>
<% end %>
