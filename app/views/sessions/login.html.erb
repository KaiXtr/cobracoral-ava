<div class="login-form-container">
	<div id="cobracoral-icon-container">
		<%= show_svg('cobracoral-logo.svg') %>
	</div>
	<div class="login-errors">
		<%= notice %>
	</div>
	<%= form_for (:session) do |f| %>
		<div class="form-group">
			<%= f.label :email, 'Email institucional: '%>
			<%= f.text_field :email, autocomplete: 'on', required: 'true', class: 'input-text' %>
		</div>
		<div class="form-group">
			<%= f.label :senha, 'Senha: '%>
			<%= f.password_field :senha, required: 'true', class: 'input-text' %>
		</div>
		<div class="form-group">
			<a href="/recuperacao">Problemas para entrar?</a>
		</div>
		<div class="button-group">
			<button type="submit" class="act-button">
				Entrar
			</button>
		</div>
	<% end %>
</div>